{
  "compilerOptions": {
    "lib": ["es2016", "esnext.asynciterable", "dom"],
    "module": "commonjs",
    "outDir": "./build",
    "target": "es2016",
    "noImplicitReturns": true,
    // Disabled so I can use the syntax TypeGraphQL is encouraging
    // to avoid confusion
    // "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "strict": true,
  },
  "compileOnSave": true,
  "include": [
    "./src/**/*",
    "./index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
