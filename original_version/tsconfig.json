{
  "compilerOptions": {
    "lib": ["es2016", "esnext.asynciterable", "dom"],
    "outDir": "./build",
    "target": "es5",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "strict": true,
  },
  "compileOnSave": true,
  "include": [
    "./src/**/*",
    "./index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
